{
  "compilerOptions": {
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "target": "ES2017",
    "lib": [
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": false,
    "strict": true
  },
  "include": [
    "**.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}